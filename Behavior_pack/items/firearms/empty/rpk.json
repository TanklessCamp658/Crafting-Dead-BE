{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "gun:rpk_empty",
      "category": "Equipment"
    },
    "components": {
      "minecraft:display_name": {
        "value": "Empty RPK"
      },
      "minecraft:creative_category": {
        "parent": "itemGroup.name.equipment"
      },
      "minecraft:max_stack_size": 1,
      "minecraft:on_use": {
        "on_use": {
          "event": "rpk:reload",
          "target": "self"
        }
      },
      "minecraft:render_offsets": {
        "main_hand": {
          "third_person": {
            "scale": [
              0.0,
              0.0,
              0.0
            ]
          },
          "first_person": {
            "scale": [
              0.0,
              0.0,
              0.0
            ]
          }
        },
        "off_hand": {
          "third_person": {
            "scale": [
              0.0,
              0.0,
              0.0
            ]
          },
          "first_person": {
            "scale": [
              0.0,
              0.0,
              0.0
            ]
          }
        }
      },
      "minecraft:hand_equipped": true,
      "minecraft:use_animation": "bow",
      "minecraft:icon": {
        "texture": "rpk"
      }
    },
    "events": {
      "rpk:reload": {
        "sequence": [
          {
            "sequence": [
              {
                "condition": "query.get_equipped_item_name(1) != 'rpkclip'",
                "sequence": [
                  {
                    "run_command": {
                      "command": [
                        "playsound gun.empty @s ~ ~ ~"
                      ],
                      "target": "holder"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  }
}